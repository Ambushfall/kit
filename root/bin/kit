#!/usr/bin/env bash

KIT=$(cd "$(dirname ${BASH_SOURCE[0]})/.." &>/dev/null && pwd)
# Check if "kit" is in node_modules/.bin
[ -L $BASH_SOURCE ] &&
    [[ $BASH_SOURCE =~ "node_modules" ]] &&
    KIT="$(
        cd "$(dirname "$0")/.."
        pwd
    )/@johnlindquist/kit" &&
    KENV="$(
        cd "$(dirname "$0")/../.."
        pwd
    )"

KNODE="${KNODE:=$KIT/../.knode/bin/node}"
# Default to system node if KNODE doesn't exist
[ ! -f $KNODE ] && KNODE=$(which node)

KIT="$KIT" \
    KENV="$KENV" \
    NODE_NO_WARNINGS=1 \
    $KNODE \
    $KIT/run/terminal.js \
    "$@"
